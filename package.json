{
  "name": "steps-app",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --modern && cp _redirects dist/_redirects",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "vue-cli-service test:unit --watch",
    "lint": "eslint src/**/*.{vue,ts} --max-warnings=0",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
    "typecheck": "tsc --noEmit",
    "prettify": "pretty-quick --staged",
    "migrate": "ts-node scripts/migrate/lib/migrate.ts --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}",
    "backup": "firestore-backup-restore --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json} --backupPath ./backups/database.$(date \"+%Y%m%d-%H%M%S\")",
    "restore": "firestore-backup-restore --restoreAccountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json} --backupPath",
    "script:refreshSmartTags": "ts-node scripts/refreshSmartTags --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}",
    "script:recreateAllThumbnails": "ts-node scripts/recreateAllThumbnails --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}"
  },
  "dependencies": {
    "@johmun/vue-tags-input": "^2.1.0",
    "@vue/composition-api": "^1.4.1",
    "colors": "^1.4.0",
    "commander": "^4.1.1",
    "core-js": "^3.4.4",
    "date-fns": "^2.16.1",
    "firebase": "^7.15.3",
    "firebase-admin": "^8.9.2",
    "firestore-backup-restore": "^1.3.1",
    "fuse.js": "^6.4.6",
    "lodash": "^4.17.15",
    "material-design-icons-iconfont": "^5.0.1",
    "moment": "^2.24.0",
    "portal-vue": "^2.1.7",
    "pretty-quick": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "register-service-worker": "^1.6.2",
    "spark-md5": "^3.0.1",
    "ts-node": "^8.6.2",
    "typedi": "^0.8.0",
    "typesafe-vuex": "^3.2.2",
    "typescript": "^4.2",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-intersect": "^1.1.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.0.3",
    "vue-typedi": "^1.1.1",
    "vuelidate": "^0.7.4",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/vue": "^5.2.8",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/jest": "^23.1.4",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.31",
    "@types/spark-md5": "^3.0.2",
    "@types/vuelidate": "^0.7.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-pwa": "^4.1.2",
    "@vue/cli-plugin-typescript": "^4.1.2",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/test-utils": "1.0.0-beta.29",
    "autoprefixer": "^10.4.0",
    "babel-core": "7.0.0-bridge.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.1.2",
    "husky": "^3.1.0",
    "node-sass": "^4.13.0",
    "postcss": "^8.4.5",
    "postcss-import": "^12.0.1",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "storybook-vue-router": "^1.0.7",
    "tailwindcss": "^3.0.5",
    "ts-jest": "^23.0.0",
    "vue-cli-plugin-storybook": "^0.6.1",
    "vue-cli-plugin-svg": "^0.1.3",
    "vue-template-compiler": "^2.6.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run lint -- --fix",
      "pre-push": "npm run test:unit && npm run build"
    }
  }
}
