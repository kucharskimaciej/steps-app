{
  "name": "steps-app",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint --fix",
    "backup": "firestore-backup-restore --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json} --backupPath ./backups/database.$(date \"+%Y%m%d-%H%M%S\")",
    "migrate": "ts-node scripts/migrate/lib/migrate.ts --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}",
    "prettify": "pretty-quick --staged",
    "restore": "firestore-backup-restore --restoreAccountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json} --backupPath",
    "script:recreateAllThumbnails": "ts-node scripts/recreateAllThumbnails --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}",
    "script:refreshSmartTags": "ts-node scripts/refreshSmartTags --accountCredentials ${FIREBASE_CREDENTIALS:-./account.${FIREBASE_ENV:-development}.json}",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
    "test:unit:watch": "vue-cli-service test:unit --watch"
  },
  "dependencies": {
    "@johmun/vue-tags-input": "^2.1.0",
    "@vuelidate/core": "^2.0.0-alpha.40",
    "@vuelidate/validators": "^2.0.0-alpha.28",
    "add": "^2.0.6",
    "colors": "^1.4.0",
    "commander": "^4.1.1",
    "date-fns": "^2.16.1",
    "firebase": "^7.15.3",
    "firebase-admin": "^8.9.2",
    "firestore-backup-restore": "^1.3.1",
    "fuse.js": "^6.4.6",
    "lodash": "^4.17.15",
    "material-design-icons-iconfont": "^5.0.1",
    "moment": "^2.24.0",
    "portal-vue": "^2.1.7",
    "pretty-quick": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "register-service-worker": "^1.6.2",
    "sass": "^1.49.11",
    "spark-md5": "^3.0.1",
    "tailwindcss": "^3.0.23",
    "ts-node": "^8.6.2",
    "typedi": "^0.10.0",
    "typesafe-vuex": "^3.2.2",
    "vue": "^3.2.31",
    "vue-intersect": "^1.1.6",
    "vue-router": "^4.0.14",
    "vue-virtual-scroller": "^2.0.0-alpha.1",
    "vuex": "^4",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/vue": "^5.2.8",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.167",
    "@types/node": "^16.11.26",
    "@types/spark-md5": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vitejs/plugin-vue-jsx": "^1.3.9",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/tsconfig": "^0.1.3",
    "@vue/vue2-jest": "^27.0.0-alpha.3",
    "autoprefixer": "^10.4.0",
    "babel-core": "7.0.0-bridge.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^8.2.0",
    "file-loader": "^6.2.0",
    "husky": "^3.1.0",
    "jsdom": "^19.0.0",
    "node-sass": "^7",
    "postcss": "^8.4.5",
    "postcss-import": "^12.0.1",
    "prettier": "^2.5.1",
    "storybook-vue-router": "^1.0.7",
    "typescript": "~4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.8.1",
    "vue-svg-inline-loader": "^2.1.2",
    "vue-tsc": "^0.33.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run lint"
    }
  }
}
