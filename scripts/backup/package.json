{
  "dependencies": {
    "firestore-backup-restore": "^1.3.1"
  },
  "scripts": {
    "backup": "firestore-backup-restore --accountCredentials ${FIREBASE_CREDENTIALS:-../../account.${FIREBASE_ENV:-development}.json} --backupPath ./backups/database.$(date \"+%Y%m%d-%H%M%S\")",
    "restore": "firestore-backup-restore --restoreAccountCredentials ${FIREBASE_CREDENTIALS:-../../account.${FIREBASE_ENV:-development}.json} --backupPath"
  }
}
